{
    "extends": "@vue/tsconfig/tsconfig.dom.json",
    "compilerOptions": {
        "composite": true,
        "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.admin.tsbuildinfo",
        "types": ["vite/client"],
        "strict": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "erasableSyntaxOnly": true,
        "noFallthroughCasesInSwitch": true,
        "noUncheckedSideEffectImports": true,
        "baseUrl": ".",
        "paths": {
            "@/*": ["resources/*"],
            "@admin/*": ["resources/admin/*"],
            "@site/*": ["resources/site/*"],
            "@shared/*": ["resources/shared/*"]
        }
    },
    "include": [
        "resources/admin/**/*.ts",
        "resources/admin/**/*.tsx",
        "resources/admin/**/*.vue",
        "resources/shared/**/*.ts",
        "resources/shared/**/*.tsx",
        "resources/shared/**/*.vue",
        "resources/shared/**/*.d.ts"
    ],
    "exclude": ["node_modules", "vendor", "storage", "public", "build"]
}
