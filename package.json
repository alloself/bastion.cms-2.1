{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "name": "bastion-cms-2-1",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "dev:site": "vite --config vite.site.config.ts",
        "dev:admin": "vite --config vite.admin.config.ts",
        "build:site": "vite build --config vite.site.config.ts",
        "build:admin": "vite build --config vite.admin.config.ts",
        "dev:all": "concurrently -k -n site,admin -c yellow,cyan \"npm:dev:site\" \"npm:dev:admin\"",
        "type-check": "vue-tsc --noEmit -p tsconfig.json",
        "type-check:site": "vue-tsc --noEmit -p tsconfig.site.json",
        "type-check:admin": "vue-tsc --noEmit -p tsconfig.admin.json",
        "prebuild:site": "npm run type-check:site",
        "prebuild:admin": "npm run type-check:admin"
    },
    "devDependencies": {
        "@pinia/colada-devtools": "^0.1.8",
        "@tailwindcss/vite": "^4.1.16",
        "@types/lodash": "^4.17.20",
        "@types/node": "^24.10.0",
        "@vitejs/plugin-vue": "^6.0.1",
        "@vue/tsconfig": "^0.8.1",
        "concurrently": "^9.2.1",
        "laravel-vite-plugin": "^2.0.1",
        "postcss": "^8.5.6",
        "postcss-nested": "^7.0.2",
        "sass": "^1.93.3",
        "tailwindcss": "^4.1.16",
        "typescript": "^5.9.3",
        "vite": "^7.1.12",
        "vite-plugin-vuetify": "^2.1.2",
        "vue-tsc": "^3.1.3"
    },
    "dependencies": {
        "@mdi/font": "^7.4.47",
        "@pinia/colada": "^0.17.7",
        "@primeuix/themes": "^1.2.5",
        "axios": "^1.13.1",
        "lodash": "^4.17.21",
        "npm-check-updates": "^19.1.2",
        "pinia": "^3.0.3",
        "primeicons": "^7.0.0",
        "primevue": "^4.4.1",
        "tailwindcss-primeui": "^0.6.1",
        "vee-validate": "^4.15.1",
        "vue": "^3.5.22",
        "vue-router": "^4.6.3",
        "vuetify": "^3.10.8",
        "zod": "^4.1.12"
    }
}
